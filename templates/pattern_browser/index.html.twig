        async function loadPatternPreview(card, filename) {
            try {
                // Get color overrides from form
                const primaryColorInput = document.getElementById('primary_color');
                const secondaryColorInput = document.getElementById('secondary_color');
                const alternatingWarpEnabledInput = document.getElementById('alternating_warp_enabled');
                const alternatingWarpColorInput = document.getElementById('alternating_warp_color');
                const alternatingWarpSpanInput = document.getElementById('alternating_warp_span');
                const alternatingWarpOffsetInput = document.getElementById('alternating_warp_offset');
                const primaryColor = primaryColorInput?.value;
                const secondaryColor = secondaryColorInput?.value;
                const alternatingWarpEnabled = alternatingWarpEnabledInput?.checked;
                const alternatingWarpColor = alternatingWarpColorInput?.value;
                const alternatingWarpSpan = alternatingWarpSpanInput?.value;
                const alternatingWarpOffset = alternatingWarpOffsetInput?.value;
                
                const requestBody = {};
                if (primaryColor && primaryColor !== '#000000') {
                    requestBody.primaryColor = primaryColor;
                }
                if (secondaryColor && secondaryColor !== '#ffffff') {
                    requestBody.secondaryColor = secondaryColor;
                }
                if (alternatingWarpEnabled && alternatingWarpColor && alternatingWarpSpan) {
                    requestBody.alternatingWarpEnabled = true;
                    requestBody.alternatingWarpColor = alternatingWarpColor;
                    requestBody.alternatingWarpSpan = alternatingWarpSpan;
                    if (alternatingWarpOffset && alternatingWarpOffset !== '0') {
                        requestBody.alternatingWarpOffset = alternatingWarpOffset;
                    }
                }
                
                const response = await fetch(`/pattern/${filename}/preview`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(requestBody)
                });
                
                if (response.ok) {
                    const weavingData = await response.json();
                    renderPatternPreview(card, weavingData);
                } else {
                    showPreviewError(card, 'Failed to load pattern');
                }
            } catch (error) {
                showPreviewError(card, 'Error loading pattern');
            }
        }

        function renderPatternPreview(card, weavingData) {
            const previewDiv = card.querySelector('.pattern-preview');
            
            if (!weavingData.pattern || !Array.isArray(weavingData.pattern)) {
                showPreviewError(card, 'No pattern data');
                return;
            }

            // Create canvas for pattern
            const canvas = document.createElement('canvas');
            const ctx = canvas.getContext('2d');
            
            const pattern = weavingData.pattern;
            const colors = weavingData.colors?.colors || {1: {r: 0, g: 0, b: 0}, 2: {r: 255, g: 255, b: 255}};
            
            // Get actual pattern dimensions
            const originalPatternHeight = pattern.length;
            const originalPatternWidth = pattern.length > 0 ? pattern[0].length : 0;
            
            if (originalPatternWidth === 0 || originalPatternHeight === 0) {
                showPreviewError(card, 'Empty pattern');
                return;
            }
            
            // Available space in the preview area (accounting for padding)
            const maxDisplayWidth = 260;  // Card width minus padding
            const maxDisplayHeight = 180; // Preview area height minus padding
            
            // Calculate scale to fit the pattern optimally in the available space
            const scaleX = maxDisplayWidth / originalPatternWidth;
            const scaleY = maxDisplayHeight / originalPatternHeight;
            const scale = Math.min(scaleX, scaleY, 8); // Cap at 8x to avoid pixelation
            
            // Ensure minimum scale for very large patterns
            const minScale = Math.max(0.5, Math.min(2, scale));
            const finalScale = Math.max(minScale, scale);
            
            // Calculate final dimensions
            const displayWidth = Math.round(originalPatternWidth * finalScale);
            const displayHeight = Math.round(originalPatternHeight * finalScale);
            
            // Set canvas size
            const pixelRatio = window.devicePixelRatio || 1;
            canvas.style.width = displayWidth + 'px';
            canvas.style.height = displayHeight + 'px';
            canvas.width = displayWidth * pixelRatio;
            canvas.height = displayHeight * pixelRatio;
            ctx.scale(pixelRatio, pixelRatio);

            // Calculate cell size for drawing
            const cellWidth = finalScale;
            const cellHeight = finalScale;
            
            // Disable image smoothing for crisp pixel art
            ctx.imageSmoothingEnabled = false;
            
            // Sample pattern if it's very large to avoid performance issues
            const maxPatternSize = 200;
            const sampleX = originalPatternWidth > maxPatternSize ? Math.floor(originalPatternWidth / maxPatternSize) : 1;
            const sampleY = originalPatternHeight > maxPatternSize ? Math.floor(originalPatternHeight / maxPatternSize) : 1;
            
            // Draw pattern
            for (let row = 0; row < originalPatternHeight; row += sampleY) {
                if (!pattern[row]) continue;
                
                for (let col = 0; col < originalPatternWidth; col += sampleX) {
                    if (col >= pattern[row].length) continue;
                    
                    const cell = pattern[row][col];
                    const color = colors[cell.displayColor] || colors[1] || {r: 0, g: 0, b: 0};
                    
                    ctx.fillStyle = `rgb(${color.r}, ${color.g}, ${color.b})`;
                    ctx.fillRect(
                        (col / sampleX) * cellWidth, 
                        (row / sampleY) * cellHeight, 
                        cellWidth, 
                        cellHeight
                    );
                }
            }
            
            previewDiv.innerHTML = '';
            previewDiv.appendChild(canvas);
        }

