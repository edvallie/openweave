{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}OpenWeave{% endblock %}</title>
        
        {# Bootstrap CSS #}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        
        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="/css/base.css">
        {% endblock %}
    </head>
    <body>
        {% block body %}
            {# Header with Navigation #}
            <header>
                {% block header %}
                    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
                        <div class="container">
                            <a class="navbar-brand" href="{{ path('app_home') }}">ðŸ§µ OpenWeave</a>
                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <div class="collapse navbar-collapse" id="navbarNav">
                                <ul class="navbar-nav ms-auto">
                                    <li class="nav-item">
                                        <a class="nav-link" href="{{ path('app_home') }}">Home</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="{{ path('app_wif_viewer') }}">WIF Viewer</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </nav>
                {% endblock %}
            </header>

            {# Main Content Area #}
            <main>
                {% block content %}{% endblock %}
            </main>

            {# Footer #}
            <footer class="bg-dark text-light py-4 mt-5">
                {% block footer %}
                    <div class="container text-center">
                        <p class="mb-0">Supports WIF specification v1.1 â€¢ <a href="http://www.tantradharma.com/maplehill/wif/wif1-1.txt" target="_blank" rel="noopener noreferrer" class="text-light">Learn about WIF format</a></p>
                    </div>
                {% endblock %}
            </footer>
        {% endblock %}

        {# Bootstrap JavaScript #}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
        
        {% block javascripts %}
        {% endblock %}
    </body>
</html>
